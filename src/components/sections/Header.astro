---
import CircularLogoIcon from "../Icons/CircularLogoIcon.astro"
import NameLogoIcon from "../Icons/NameLogoIcon.astro"
import HeaderOption from "../HeaderOption.astro"
---

<header class="w-[350px] sm:w-[960px] flex justify-between items-center  px-4 py-2 sm:px-0 sm:py-5 bg-custom-black sm:bg-transparent rounded-2xl sm:rounded-none sm:border-b">
  <div class="hidden sm:flex items-center gap-3">
      <CircularLogoIcon/>
      <NameLogoIcon />
  </div>
  <nav class="text-white text-lg flex justify-between gap-5 w-full sm:w-auto">
    <HeaderOption ref="projects" title="Proyectos" />
    <HeaderOption ref="experience" title="Experiencia" />
    <HeaderOption ref="skills" title="Habilidades" />
    <!--<HeaderOption ref="contact" title="Contacto" />-->
  </nav>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    z-index: 1000;
    transition: background-color 0.4s ease-in-out;
  }
  header.scrolled {
      opacity: 0.9;
      backdrop-filter: blur(60px); 

  }
</style>

<script>
  document.addEventListener("scroll", () => {
    const header = document.querySelector("header");
    if (window.scrollY > 0) header.classList.add("scrolled");
    else header.classList.remove("scrolled");
  });
</script>
