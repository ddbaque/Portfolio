---
import ProjectCard from '../PorjectCard.astro'
import CodeIcon from '../Icons/CodeIcon.astro'
import projectsData from '../../data/projects.json'
import HeaderSection from '../HeaderSection.astro'
import type { ProjectData } from '../../types/data.ts'

const projects: ProjectData[] = projectsData
---

<section class="flex flex-col gap-5 w-[350px] sm:w-[960px]" id="projects">
  <HeaderSection Icon={CodeIcon} title="Proyectos" />
  <div
    class="flex flex-col sm:flex-row items-center sm:items-start gap-8 sm:justify-between group"
  >
    {projects.map((project: ProjectData) => <ProjectCard data={project} />)}
  </div>
</section>
