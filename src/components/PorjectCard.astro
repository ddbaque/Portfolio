---
import BtnProject from './buttons/ButtonProject.astro';
const { title, description, imageUrl } = Astro.props;
---

<article class="w-[300px] flex flex-col gap-5">
  <figure class="w-[300px] h-[300px] overflow-hidden rounded-xl">
    <img class="object-cover h-full w-full" src={imageUrl} alt={imageUrl} />
  </figure>
  <div class="flex flex-col gap-8">
    <div class="text-white flex flex-col gap-2">
      <h3 class="text-[16px] font-medium">{title}</h3>
      <p class="text-custom-lightPink">{description}</p>
    </div>
    <div class="w-full flex justify-center items-center text-white gap-6">
      <BtnProject iconName="github" text='Code' />
      <BtnProject iconName="ancle" text='Preview' />
    </div>
  </div>
</article>
