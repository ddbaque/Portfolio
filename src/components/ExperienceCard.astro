---
import CalendarIcon from './Icons/CalendarIcon.astro'

interface Props {
  position: string
  time: string
  description: string
}
const { description, position, time } = Astro.props
---

<div class="w-full px-4">
  <div class="relative border-l-2 border-custom-teal py-4 px-10">
    <div
      class="absolute top-[20px] left-0 transform -translate-x-1/2 -translate-y-1/2 bg-custom-teal w-4 h-4 sm:w-9 sm:h-9 rounded-full"
    >
    </div>

    <div
      class="w-full sm:w-[450px] px-6 py-6 border border-custom-teal rounded-2xl flex flex-col gap-2"
    >
      <div class="flex items-center gap-3">
        <CalendarIcon
          class="text-custom-teal h-[16px] w-[16px] sm:w-[20px] sm:h-[20px]"
        />
        <h2 class="text-custom-blue font-bold text-sm sm:text-base uppercase">
          {time}
        </h2>
      </div>
      <h3 class="text-custom-pink font-bold text-base sm:text-lg">
        {position}
      </h3>
      <p class="text-white text-xs sm:text-sm">
        {description}
      </p>
    </div>
  </div>
</div>
